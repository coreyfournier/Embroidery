<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="350"
		Width="900" Height="600"
        x:Class="Embroidery.Client.Views.MainWindow"
		xmlns:views="clr-namespace:Embroidery.Client.Views"
        Title="Stitch Sort">
	
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="300"/>
			<ColumnDefinition Width="*"/>			
		</Grid.ColumnDefinitions>
		
		<Grid.RowDefinitions>
			<RowDefinition Height="30" />
			<RowDefinition Height="*" />
			<RowDefinition Height="60" />
		</Grid.RowDefinitions>
		<TextBox Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Watermark="Search" KeyUp="SearchTextKeyUp"/>
		<views:FileListView Name="FileListView" Content="{Binding FileList}"  Grid.Column="0" Grid.Row="1" VerticalAlignment="Stretch"></views:FileListView>
		
		<views:FileDetailView Name="FileDetail" 							  
							  Grid.Row="1" 
							  Grid.Column="1" 
							  VerticalAlignment="Stretch"
							  HorizontalAlignment="Stretch"
							  VerticalContentAlignment="Stretch" 
							  HorizontalContentAlignment="Stretch"
							  >			
		</views:FileDetailView>
		<TextBox Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"   Text="{Binding DisplayStatus, Mode=TwoWay}"/>
	</Grid>
</Window>
