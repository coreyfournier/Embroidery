<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:utils="clr-namespace:Embroidery.Client.Utilities"
             x:Class="Embroidery.Client.Views.FileView">

	<UserControl.Resources>
		<utils:BitmapConverter x:Key="bitMapFromDb"/>
	</UserControl.Resources>
	<Grid Grid.Row="0" Grid.Column="0">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="75" />
			<ColumnDefinition Width="Auto" MinWidth="300"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="76"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
			
		<Image Name="GroupedImageItem"			
			Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
			Width="75"
			Height="75"
			Source="{Binding, Converter={StaticResource bitMapFromDb}}"/>
		<Label Grid.Row="0" Grid.Column="1" Content="{Binding CleanName}" VerticalAlignment="Top"></Label>
		<Label Grid.Row="1" Grid.Column="1" Content="{Binding TotalLikeFiles}" VerticalAlignment="Top"></Label>
	</Grid>
</UserControl>
